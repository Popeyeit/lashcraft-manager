generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl         = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
  shadowDatabaseUrl = env("POSTGRES_URL_NON_POOLING") // used for migrations
}

model Artist {
  id           Int           @id @default(autoincrement())
  login        String        @unique
  password     String
  role         Role          @default(USER)
  birthDay     DateTime
  percent      Int
  transactions Transaction[]
  Salary       Salary[]
}

model Transaction {
  id            Int           @id @default(autoincrement())
  customerName  String
  amount        Int
  tip           Int           @default(0)
  service       String
  artist        Artist        @relation(fields: [artistId], references: [id])
  artistId      Int
  salary        Salary        @relation(fields: [salaryId], references: [id])
  salaryId      Int
  paymentMethod PaymentMethod @default(CASH)
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
}

model Salary {
  id            Int           @id @default(autoincrement())
  amountArtist  Int
  amountSalon   Int
  approveSalon  SlaryStatus   @default(PENDING)
  approveArtist SlaryStatus   @default(PENDING)
  artist        Artist        @relation(fields: [artistId], references: [id])
  artistId      Int
  transactions  Transaction[]
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
}

// Transaction 

// Artist needs to take her money and she makes request to Alena
// Alena gets request and approve operation.

// Artist makes request to give  money of salon to Alena. 
// Alena get request and approve operation.

// Alena needs to take her money and she makes request to Artist
// Artist gets request and approve operation.

// Who makes request
// It pass operation or get operatin.
// Another person approve this operation.

enum SlaryStatus {
  UNPAID
  PAID
  PENDING
  REQUEST
}

enum Role {
  USER
  ADMIN
}

enum PaymentMethod {
  CASH
  ZELLE
  CARD
  VENMO
}
